---
import socialIcons from "@config/social";
---

<ul class="mt-4 flex items-center gap-8 sm:mt-6">
  {
    socialIcons.map(({ title, Icon, width, height, href }) => {
      return (
        <li>
          <a href={href} target="_blank">
            <span>
              <Icon
                class={`${title === "Gmail" ? "fill-[#EA4335]" : "fill-base-content "} hover:rotate-12 transition-transform duration-300 ease-in-out`}
                width={width}
                height={height}
              />
            </span>
          </a>
        </li>
      );
    })
  }
</ul>
