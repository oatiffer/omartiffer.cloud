---
import socialIcons from "@config/social.ts";
---

<ul class="mt-4 flex items-center gap-8 sm:mt-6">
  {
    socialIcons.map(({ url, fill, width, height, Icon }) => {
      return (
        <li>
          <a href={url} target="_blank">
            <span>
              <Icon
                class={`fill-${fill} hover:rotate-12 transition-transform duration-300 ease-in-out`}
                width={width}
                height={height}
              />
            </span>
          </a>
        </li>
      );
    })
  }
</ul>
