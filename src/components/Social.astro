---
interface Props {
  fill?: string;
  icons: {
    title: string;
    Icon: ((_props: astroHTML.JSX.SVGAttributes) => unknown) & ImageMetadata;
    fill: string;
    width: number;
    height: number;
    href: string;
  }[];
}

const { fill, icons }: Props = Astro.props;
---

<ul class="flex items-center gap-8">
  {
    icons.map(({ title, Icon, width, height, href }) => {
      return (
        <li>
          <a href={href} target="_blank" rel="noopener noreferrer">
            <span>
              <Icon
                class={`${fill} || ${title === "Gmail" ? "fill-[#EA4335]" : "fill-base-content"} hover:rotate-12 transition-transform duration-300 ease-in-out`}
                width={width}
                height={height}
              />
            </span>
          </a>
        </li>
      );
    })
  }
</ul>
