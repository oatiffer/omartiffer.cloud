---
import { Image } from "astro:assets";
import aboutPhoto from "@assets/me.png";

const { intro } = Astro.props;
---

<section
  class="bg-base-300 pt-32 mx-auto w-screen max-w-screen-xl px-4 sm:px-6 sm:pt-40 lg:px-8 lg:pt-32"
>
  <div class="flex items-center justify-center">
    <div>
      <div
        class="text-2xl font-bold text-base-content sm:text-4xl underline decoration-3 decoration-accent decoration-dotted underline-offset-8"
      >
        {intro.title}
      </div>
      <div class="mt-14 block shrink-0 bg-base-300 drop-shadow-2xl">
        <Image
          class="object-cover float-left mr-4 rounded-4xl"
          src={aboutPhoto}
          width={220}
          height={220}
          alt="Omar Tiffer photo"
        />
      </div>
      <p class="pt-4 text-base text-base-content sm:text-lg">
        {
          intro.content.split("\n").map((line: string) => (
            <>
              {line}
              <b>
                <br />
                <br />
              </b>
            </>
          ))
        }
      </p>
    </div>
  </div>
</section>
