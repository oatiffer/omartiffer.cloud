---
const { title, image, content } = Astro.props.intro;
---

<section class="bg-base-300">
  <div
    class="mx-auto w-screen max-w-screen-xl flex items-center justify-center pt-38 px-4 pb-24 sm:px-6 sm:pt-40 lg:px-8 lg:pt-38"
  >
    <div>
      <h1
        class="text-2xl font-bold text-base-content sm:text-4xl cool-underline"
      >
        {title}
      </h1>
      <div class="mt-14 block shrink-0 bg-base-300">
        <img
          class="object-fit float-left mr-4 rounded-4xl shadow-xl"
          src={image}
          width={220}
          height={220}
          alt="Omar Tiffer photo"
        />
      </div>
      <p class="pt-4 text-base text-base-content sm:text-lg">
        {
          content.split("\n").map((line: string) => (
            <>
              {line}
              <b>
                <br />
                <br />
              </b>
            </>
          ))
        }
      </p>
    </div>
  </div>
</section>
