---
import Social from "@components/Social.astro";
import socialIcons from "@config/social.ts";
import heroImg from "@assets/images/hero.png";
import { Image } from "astro:assets";

const { greeting, title, subTitle, content, cta, link, connect } = Astro.props;
---

<section class="w-full">
  <div
    class="flex items-center min-h-[calc(100dvh-128px)] mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:grid lg:grid-cols-2 lg:items-center lg:gap-6 lg:px-8 lg:py-0"
  >
    <div class="max-w-prose text-left md:max-w-full">
      <h3 class="text-primary text-xl">{greeting}</h3>
      <h1 class="mt-4 text-4xl font-bold text-base-content sm:text-5xl">
        {title}
      </h1>
      <h2 class="mt-4 text-primary text-2xl font-bold">
        {subTitle}
      </h2>
      <p class="mt-4 text-base-content md:text-lg">
        {content}
      </p>
      <p class="mt-4 md:text-lg">
        {cta}<a
          href="/about"
          class="text-primary hover:text-secondary cursor-pointer underline underline-offset-4"
          >{link}</a
        >{connect}
      </p>
      <div class="mt-4 sm:mt-6">
        <Social icons={socialIcons.main} />
      </div>
    </div>

    <div class="x-auto hidden lg:flex">
      <Image class="x-auto" src={heroImg} alt="Hero Image" />
    </div>
  </div>
</section>
